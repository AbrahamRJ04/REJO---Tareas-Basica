@{
}
<h2>Usuario</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Usuario para editarlo o + para agregar...</h5>
        <hr />
    </div>

</div>
<hr />

<div style="float:right;">
    @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })

    <hr />
</div>

<br>


<table class="table table-striped table-hover">
    <thead>
        <tr style="background-color:darkslategrey">
            <td style="color:white">Editar</td>

            <td style="visibility:collapse; display:none;">IdUsuario</td>
            <td style="color:white">Nombres</td>
            <td style="color:white">Apellido</td>
            <td style="color:white">NumeroEmpleado</td>
            <td style="visibility:collapse; display:none;">Contrasena</td>

            <td style="color:white">Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Model_Layer.Usuario user in Model.Usuarios)
        {
            <tr>
                <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "User", new { IdUsuario = user.IdUsuario })"><i class="bi bi-pencil-square"></i></a></td>

                <td style="visibility:collapse; display:none;">@user.IdUsuario</td>
                <td>@user.Nombres </td>
                <td>@user.Apellidos </td>
                <td>@user.NumeroEmpleado </td>
                <td style="visibility:collapse; display:none;">@user.Contraseña</td>

                <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "User", new { IdUsuario = user.IdUsuario})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-trash3-fill"></i></a></td>
            </tr>

        }

    </tbody>
</table>